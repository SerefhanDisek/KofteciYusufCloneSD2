<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Izgara Etler"  Padding="10,20" BackgroundColor="#1b1b1b"
             xmlns:viewModels="clr-namespace:KofteciYusufCloneSD2.ViewModels;assembly=KofteciYusufCloneSD2"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KofteciYusufCloneSD2.Views.IzgaraEtlerPage">
    
    <ContentPage.BindingContext>
        <viewModels:IzgaraEtlerViewModel/>

    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackLayout BackgroundColor="#383838"
                         Padding="10,15"
                         Grid.Row="0" Grid.Column="0">
                    <ImageButton BackgroundColor="#383838" Source="{Binding Products[0].ImageUrl}" HeightRequest="100" />
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding Products[0].Name}" FontSize="18" FontAttributes="Bold" TextColor="WhiteSmoke"/>
                        <Label Text="{Binding Products[0].Description}" FontSize="18" FontAttributes="Bold" TextColor="WhiteSmoke"/>
                    </StackLayout>

                    <BoxView HeightRequest="1" Background="#f1f1f1"/>
                    <StackLayout Orientation="Horizontal">

                        <Label Text="{Binding Products[0].Price}" TextColor="WhiteSmoke" BackgroundColor="#383838" FontSize="18" FontAttributes="Bold" Padding="0,12,0,0"/>
                        <Label Text="₺" TextColor="WhiteSmoke" BackgroundColor="#383838" FontSize="18" FontAttributes="Bold" Padding="0,12,0,0"/>

                        <Button ImageSource="https://img.icons8.com/android/70/000000/buy.png" BackgroundColor="#383838"/>
                    </StackLayout>
                </StackLayout>

                <StackLayout BackgroundColor="#383838"
                             Padding="10,15"
                             Grid.Row="0" Grid.Column="1">
                    <ImageButton BackgroundColor="#383838" Source="{Binding Products[1].ImageUrl}" HeightRequest="100" />
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding Products[1].Name}" FontSize="18" FontAttributes="Bold" TextColor="WhiteSmoke"/>
                        <Label Text="{Binding Products[1].Description}" FontSize="18" FontAttributes="Bold" TextColor="WhiteSmoke"/>
                    </StackLayout>
                    <BoxView HeightRequest="1" Background="#f1f1f1"/>
                    <StackLayout Orientation="Horizontal">

                        <Label Text="{Binding Products[1].Price}" TextColor="WhiteSmoke" BackgroundColor="#383838" FontSize="18" FontAttributes="Bold" Padding="0,12,0,0"/>
                        <Label Text="₺" TextColor="WhiteSmoke" BackgroundColor="#383838" FontSize="18" FontAttributes="Bold" Padding="0,12,0,0"/>

                        <Button ImageSource="https://img.icons8.com/android/70/000000/buy.png" BackgroundColor="#383838"/>
                    </StackLayout>
                </StackLayout>

                <StackLayout BackgroundColor="#383838"
                             Padding="10,15"
                             Grid.Row="1" Grid.Column="0">
